@model SV20T1020085.Web.Models.Person

@{
}
<div class="box box-primary">
<div class="box-body">
    <form action="~/Test/Save" method="post">
        <input type="hidden" name="CategoryID" value="" />
        <div class="form-group">
            <label>Tên loại hàng:</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" autofocus>
        </div>

        <div class="form-group">
            <label>Tên mô tả:</label>
            <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
            <input type="text" class="form-control" name="BirthDateInput" value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en_GB"))">
        </div>
        <div class="form-group">
            <label>Tên mô tả:</label>
            <input type="text" class="form-control" name="Salary" value="@Model.Salary">
        </div>

        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy"></i>
                Lưu dữ liệu
            </button>
        </div>
    </form>

</div>

</div>